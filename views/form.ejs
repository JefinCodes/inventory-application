<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameLord</title>
</head>
<body>
    <form method="POST" action="/games">
        <div>
            <label for="name">Game Name:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <br>
        <div>
            <label for="genres">Select Genres:</label>
            <select id="genres" name="genres" multiple required>
                <option value="action">Action</option>
                <option value="adventure">Adventure</option>
                <option value="arcade">Arcade</option>
                <option value="board">Board</option>
                <option value="card">Card</option>
                <option value="casual">Casual</option>
                <option value="educational">Educational</option>
                <option value="role-playing">Role-Playing</option>
                <option value="simulation">Simulation</option>
                <option value="strategy">Strategy</option>
                <option value="sports">Sports</option>
            </select>
        </div>
        <br>
        <div>
            <label>Developers:</label>
            <div id="developer-fields">
                <input type="text" name="developers" placeholder="Enter developer name" required>
            </div>
            <button type="button" onClick="addDeveloper()">+ Add Another Developer</button>
        </div>
        <br>
        <div>
            <button type="submit">Submit</button>
        </div>
    </form>
    <script>
        function addDeveloper(){
            const div = document.createElement('div');
            div.innerHTML = '<input type="text" name="developers" placeholder="Enter developer name">';
            document.getElementById('developer-fields').appendChild(div);
        }
    </script>
</body>
</html>